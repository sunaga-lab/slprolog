<UserControl x:Class="SLProlog.UnifyTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="480" Height="480">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="100" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>


        <TextBox Name="TermA" TextWrapping="Wrap" AcceptsReturn="True" Margin="2" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3">
        </TextBox>
        <TextBox Name="TermB" TextWrapping="Wrap" AcceptsReturn="True" Margin="2" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3">
        </TextBox>
        <TextBox Name="Result" TextWrapping="Wrap" AcceptsReturn="True" Margin="2" Grid.Column="1" Grid.Row="4"  Grid.ColumnSpan="3">
        </TextBox>

        <Button Name="RunBtn" Content="↓ Unify ↓" Margin="30" Grid.Column="2" Grid.Row="3" Click="PrologRun">

        </Button>

    </Grid>

</UserControl>
